# ===============================================
# VELINK CONFIGURATION FILE
# ===============================================
# This is the main configuration file for Velink
# Copy this file and customize the values below

# ===============================================
# AUTHENTICATION & SECURITY
# ===============================================
# Admin token for accessing the admin panel
# IMPORTANT: Change this to a secure, unique value in production!
ADMIN_TOKEN=velink-admin-2025-secure-token-v2

# ===============================================
# SERVER CONFIGURATION
# ===============================================
# Port for the main server (80 for production, 3001 for development)
PORT=80

# Environment mode (development/production)
NODE_ENV=production

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
# Path to the SQLite database file
DATABASE_PATH=./server/velink.db

# ===============================================
# SECURITY & RATE LIMITING
# ===============================================
# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=500
RATE_LIMIT_MAX_REQUESTS=1
DAILY_LINK_LIMIT=500

# CORS origin for client connections
CORS_ORIGIN=https://velink.me

# ===============================================
# SSL CONFIGURATION (Optional)
# ===============================================
# Uncomment and configure these for HTTPS
# SSL_KEY_PATH=./ssl/private.key
# SSL_CERT_PATH=./ssl/certificate.crt

# ===============================================
# FEATURES CONFIGURATION
# ===============================================
# Enable/disable features
ENABLE_ANALYTICS=true
ENABLE_SITEMAP=true
ENABLE_QR_CODES=true

# ===============================================
# PERFORMANCE & CACHING
# ===============================================
COMPRESSION_ENABLED=true
STATIC_CACHE_MAX_AGE=86400

# ===============================================
# LOGGING CONFIGURATION
# ===============================================
LOG_LEVEL=info
LOG_RETENTION_DAYS=30
MAX_LOGS_IN_MEMORY=10000

# ===============================================
# UPDATE MANAGER CONFIGURATION
# ===============================================
UPDATE_BACKUP_RETENTION_DAYS=30
UPDATE_MAX_RETRIES=3
UPDATE_TIMEOUT_MINUTES=30

# ===============================================
# MAINTENANCE MODE
# ===============================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Velink is currently under maintenance. Please try again later.
MAINTENANCE_MODE_FILE=maintenance.lock

# ===============================================
# WEBSITE ACCESS CONTROL
# ===============================================
# Set to true to enable password protection for the entire website
WEBSITE_PRIVATE=false
# Password for accessing the website when WEBSITE_PRIVATE=true
WEBSITE_PASSWORD=your-secure-website-password

# SERVER CONFIGURATION
# ====================
PORT=80
NODE_ENV=production

# DATABASE CONFIGURATION
# ======================
DATABASE_PATH=./server/velink.db

# SSL Configuration (optional)
# =============================
SSL_KEY_PATH=
SSL_CERT_PATH=

# WEBSITE PRIVACY & MAINTENANCE
# ==============================
WEBSITE_PRIVATE=false
WEBSITE_PASSWORD=yourSecurePassword123
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Website is temporarily under maintenance. Please check back later.
