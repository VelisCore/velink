# VeLink Production Environment Configuration for velink.me
# Copy this file to .env and update the values

# Authentication
ADMIN_TOKEN=your-secure-admin-token-here-change-this

# Server Configuration
PORT=443
NODE_ENV=production

# Database
DATABASE_PATH=./server/velink.db

# SSL Configuration (Let's Encrypt paths)
SSL_KEY_PATH=/etc/letsencrypt/live/velink.me/privkey.pem
SSL_CERT_PATH=/etc/letsencrypt/live/velink.me/fullchain.pem

# Privacy & Legal
PRIVACY_ACCESS_PASSWORD=your-privacy-password-change-this
REQUIRE_PRIVACY_ACCEPTANCE=true
ENABLE_COOKIE_NOTICE=true

# Features
ENABLE_SITEMAP=true
