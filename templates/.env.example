# VeLink Environment Configuration
# Copy this file to the server/ directory as .env and configure your values

# Database Configuration
DATABASE_URL=./velink.db

# Server Configuration
PORT=3001
NODE_ENV=production

# Admin Authentication
# Generate a secure token for admin access (minimum 32 characters recommended)
ADMIN_TOKEN=your-secure-admin-token-change-this-immediately

# Update Manager Configuration
UPDATE_BACKUP_RETENTION_DAYS=30
UPDATE_MAX_RETRIES=3
UPDATE_TIMEOUT_MINUTES=30

# Security Configuration
RATE_LIMIT_WINDOW_MS=500
RATE_LIMIT_MAX_REQUESTS=1
DAILY_LINK_LIMIT=500

# Maintenance Mode
MAINTENANCE_MODE_FILE=maintenance.lock
