  <meta name="keywords" content="Velink, Linktree alternative, customizable links, online presence, minimal design">
  <meta name="author" content="Velis">
  <meta name="robots" content="index, follow">
  <meta property="og:title" content="Velink – Coming Soon">
  <meta property="og:description" content="Velink is a minimalist, customizable alternative to Linktree. Claim your link and manage your online presence with ease.">
  <meta property="og:image" content="/img/logo/fresh/white_purple_rounded.png">
  <meta property="og:url" content="https://velink.me">
  <meta property="og:type" content="website">
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3166078894407448" crossorigin="anonymous"></script>
  <link rel="preload" as="style" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" onload="this.onload=null;this.rel='stylesheet'">
  <noscript><link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"></noscript>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
  <meta name="twitter:title" content="Velink – Coming Soon">
  <meta name="twitter:description" content="Velink is a minimalist, customizable alternative to Linktree. Claim your link and manage your online presence with ease.">
  <meta name="twitter:image" content="/img/logo/fresh/white_purple_rounded.png">
  <meta name="twitter:card" content="/img/logo/fresh/white_purple_rounded.png">
  <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet"/>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Velink",
      "url": "https://velink.me",
      "description": "Velink is a minimalist, customizable alternative to Linktree. Claim your link and manage your online presence with ease.",
      "publisher": {
        "@type": "Organization",
        "name": "Velis",
        "logo": "/img/logo/fresh/white_purple_rounded.png"
      }
    }
  </script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
  <noscript><link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet"></noscript>
  <link href="/css/dashboard.css" rel="stylesheet" />
  <link href="/css/dashboard_layout.css" rel="stylesheet" />
  <link href="/css/dashboard_widgets.css" rel="stylesheet" />
</head>
<body>
  <nav>
    <a class="logo_link" href="/"><div class="logo">Velink</div></a>
    <button class="menu-toggle" aria-label="Toggle menu">&#9776;</button>
    <ul class="nav-links">
      <% if (user) { %>
        <li><a href="/manage" class="nav-avatar">
          <img src="<%= user.profileImage || '/img/not_signed_in/variant2.svg' %>" alt="Profile Picture" />
        </a></li>
      <% } else { %>
        <li><a href="/login" class="login-button">Login</a></li>
      <% } %>
    </ul>
  </nav>

  <div class="page-wrapper">
    <aside class="sidebar">
      <div class="nav-section">
        <div class="nav-section-title">General</div>
        <a href="/manage" class="nav-item"><i class="bi bi-house"></i> Home</a>
        <a href="/feed" class="nav-item"><i class="bi bi-rss"></i> News</a>
      </div>
      <div class="nav-section">
        <div class="nav-section-title">Account</div>
        <a href="/profile/<%= username %>" class="nav-item"><i class="bi bi-person"></i> Profile</a>
                <a href="/settings" class="nav-item"><i class="bi bi-gear"></i> Settings</a>
        <a href="/logout" class="nav-item logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
      </div>
      <div class="nav-section">
        <div class="nav-section-title">Customization</div>
        <a href="/customize" class="nav-item"><i class="bi bi-sliders"></i> Customize</a>
        <a href="/connections" class="nav-item"><i class="bi bi-people"></i> Connections</a>
        <a href="/custom-domain" class="nav-item"><i class="bi bi-globe"></i> Custom Domain</a>
      </div>
      <div class="nav-section">
        <div class="nav-section-title">Analytics</div>
        <a href="/analytics" class="nav-item"><i class="bi bi-bar-chart"></i> Analytics</a>
      </div>
    </aside>



    
         <main class="content">
            <h1>Analytics</h1>
            
            <div class="timeframe-selector">
              <select id="timeframeSelect" onchange="location.href='?timeframe=' + this.value">
                <option value="7days" <%= timeframe === '7days' ? 'selected' : '' %>>Last 7 days</option>
                <option value="30days" <%= timeframe === '30days' ? 'selected' : '' %>>Last 30 days</option>
                <option value="90days" <%= timeframe === '90days' ? 'selected' : '' %>>Last 90 days</option>
              </select>
            </div>

            <div class="analytics-overview">
              <div class="metric-card">
                <h3>Total Clicks</h3>
                <div class="metric-value"><%= analytics.totalClicks %></div>
              </div>
              <div class="metric-card">
                <h3>Profile Views</h3>
                <div class="metric-value"><%= analytics.profileViews %></div>
              </div>
            </div>

            <div class="analytics-charts">
              <div class="chart-section">
                <h3>Daily Clicks</h3>
                <div class="chart-container">
                  <% if (analytics.dailyClicks && analytics.dailyClicks.length > 0) { %>
                    <% analytics.dailyClicks.forEach(day => { %>
                      <div class="chart-bar">
                        <div class="bar-label"><%= day.date %></div>
                        <div class="bar-value"><%= day.clicks %></div>
                      </div>
                    <% }); %>
                  <% } else { %>
                    <p>No click data available for this timeframe.</p>
                  <% } %>
                </div>
              </div>

              <div class="chart-section">
                <h3>Top Links</h3>
                <div class="top-items">
                  <% if (analytics.topLinks && analytics.topLinks.length > 0) { %>
                    <% analytics.topLinks.forEach(link => { %>
                      <div class="top-item">
                        <div class="item-title"><%= link.title %></div>
                        <div class="item-url"><%= link.url %></div>
                        <div class="item-clicks"><%= link.clicks %> clicks</div>
                      </div>
                    <% }); %>
                  <% } else { %>
                    <p>No link data available.</p>
                  <% } %>
                </div>
              </div>

              <div class="chart-section">
                <h3>Top Countries</h3>
                <div class="top-items">
                  <% if (analytics.topCountries && analytics.topCountries.length > 0) { %>
                    <% analytics.topCountries.forEach(country => { %>
                      <div class="top-item">
                        <div class="item-title"><%= country.country || 'Unknown' %></div>
                        <div class="item-clicks"><%= country.clicks %> clicks</div>
                      </div>
                    <% }); %>
                  <% } else { %>
                    <p>No country data available.</p>
                  <% } %>
                </div>
              </div>
            </div>

        </main>

  </div>

  <script>
    const toggleButton = document.querySelector('.menu-toggle');
    const navLinks = document.querySelector('.nav-links');

    toggleButton.addEventListener('click', () => {
      navLinks.classList.toggle('show');
    });
  </script>
</body>
</html>
