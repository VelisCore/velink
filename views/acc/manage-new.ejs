<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Link Management - Velink</title>
  <link rel="icon" href="/img/logo/fresh/white_purple_rounded.png" type="image/png">
  <meta name="description" content="Manage your Velink profile and links">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  
  <!-- Styles -->
  <link href="/css/styles.css" rel="stylesheet" />
  <link href="/css/dashboard.css" rel="stylesheet" />
</head>
<body>
  <!-- Modern Dashboard Layout -->
  <div class="dashboard-layout">
    <!-- Sidebar -->
    <aside class="dashboard-sidebar">
      <div class="p-6">
        <!-- Logo -->
        <div class="flex items-center gap-3 mb-8">
          <img src="/img/logo/fresh/white_purple_rounded.png" alt="Velink" width="32" height="32" />
          <span class="text-xl font-bold text-primary">Velink</span>
        </div>
        
        <!-- Navigation -->
        <nav class="space-y-2">
          <div class="text-xs font-semibold text-muted uppercase tracking-wider mb-3">Content</div>
          <a href="/manage" class="nav-item active">
            <i class="bi bi-link-45deg"></i>
            <span>Links</span>
          </a>
          <a href="/feed" class="nav-item">
            <i class="bi bi-rss"></i>
            <span>Feed</span>
          </a>
          
          <div class="text-xs font-semibold text-muted uppercase tracking-wider mb-3 mt-6">Account</div>
          <a href="/profile/<%= username %>" class="nav-item">
            <i class="bi bi-person"></i>
            <span>Profile</span>
          </a>
          <a href="/settings" class="nav-item">
            <i class="bi bi-gear"></i>
            <span>Settings</span>
          </a>
          <a href="/customize" class="nav-item">
            <i class="bi bi-palette"></i>
            <span>Customize</span>
          </a>
          <a href="/analytics" class="nav-item">
            <i class="bi bi-graph-up"></i>
            <span>Analytics</span>
          </a>
          
          <% if (user.role === 'admin') { %>
          <div class="text-xs font-semibold text-muted uppercase tracking-wider mb-3 mt-6">Admin</div>
          <a href="/admin" class="nav-item">
            <i class="bi bi-shield-check"></i>
            <span>Administration</span>
          </a>
          <% } %>
        </nav>
      </div>
      
      <!-- User Profile at Bottom -->
      <div class="mt-auto p-6 border-t">
        <div class="flex items-center gap-3">
          <img src="<%= user.profileImage || '/img/not_signed_in/variant2.svg' %>" alt="Profile" class="w-8 h-8 rounded-full object-cover" />
          <div class="flex-1 min-w-0">
            <div class="text-sm font-medium text-gray-900 truncate"><%= user.username %></div>
            <div class="text-xs text-gray-500">Free Plan</div>
          </div>
          <a href="/logout" class="text-gray-400 hover:text-gray-600">
            <i class="bi bi-box-arrow-right"></i>
          </a>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="dashboard-main">
      <!-- Header -->
      <header class="dashboard-header">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Link Management</h1>
            <p class="text-gray-600">Organize and manage your links</p>
          </div>
          <div class="flex items-center gap-3">
            <a href="/profile/<%= username %>" target="_blank" class="btn btn-secondary btn-sm">
              <i class="bi bi-eye"></i>
              Preview
            </a>
            <button class="btn btn-primary btn-sm" onclick="addNewLink()">
              <i class="bi bi-plus"></i>
              Add Link
            </button>
          </div>
        </div>
      </header>

      <!-- Dashboard Content -->
      <div class="dashboard-content">
        <!-- Stats Overview -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div class="card">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Total Links</p>
                <p class="text-2xl font-bold text-gray-900"><%= links ? links.length : 0 %></p>
              </div>
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                <i class="bi bi-link-45deg text-blue-600 text-xl"></i>
              </div>
            </div>
          </div>
          
          <div class="card">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Total Clicks</p>
                <p class="text-2xl font-bold text-gray-900">
                  <%= links ? links.reduce((total, link) => total + (link.clicks || 0), 0) : 0 %>
                </p>
              </div>
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                <i class="bi bi-cursor-fill text-green-600 text-xl"></i>
              </div>
            </div>
          </div>
          
          <div class="card">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Active Links</p>
                <p class="text-2xl font-bold text-gray-900">
                  <%= links ? links.filter(link => link.isActive !== false).length : 0 %>
                </p>
              </div>
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                <i class="bi bi-toggle-on text-purple-600 text-xl"></i>
              </div>
            </div>
          </div>
          
          <div class="card">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Profile Views</p>
                <p class="text-2xl font-bold text-gray-900"><%= user.profileViews || 0 %></p>
              </div>
              <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                <i class="bi bi-eye-fill text-orange-600 text-xl"></i>
              </div>
            </div>
          </div>
        </div>

        <!-- Links Management -->
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Your Links</h3>
            <p class="card-description">Drag and drop to reorder your links</p>
          </div>
          
          <div id="links-container" class="space-y-4">
            <% if (links && links.length > 0) { %>
              <% links.forEach((link, index) => { %>
                <div class="link-item" data-link-id="<%= link.id %>">
                  <div class="flex items-center gap-4">
                    <!-- Drag Handle -->
                    <div class="drag-handle cursor-move text-gray-400 hover:text-gray-600">
                      <i class="bi bi-grip-vertical"></i>
                    </div>
                    
                    <!-- Link Info -->
                    <div class="flex-1 min-w-0">
                      <div class="flex items-center gap-2 mb-1">
                        <h4 class="font-medium text-gray-900 truncate"><%= link.title %></h4>
                        <% if (!link.isActive) { %>
                          <span class="status-badge warning">Inactive</span>
                        <% } %>
                      </div>
                      <p class="text-sm text-gray-600 truncate"><%= link.url %></p>
                      <div class="flex items-center gap-4 mt-2 text-xs text-gray-500">
                        <span><i class="bi bi-cursor"></i> <%= link.clicks || 0 %> clicks</span>
                        <span><i class="bi bi-calendar"></i> Added <%= new Date(link.createdAt).toLocaleDateString() %></span>
                      </div>
                    </div>
                    
                    <!-- Actions -->
                    <div class="flex items-center gap-2">
                      <button class="btn btn-ghost btn-sm" onclick="editLink('<%= link.id %>')">
                        <i class="bi bi-pencil"></i>
                      </button>
                      <button class="btn btn-ghost btn-sm" onclick="toggleLink('<%= link.id %>', <%= link.isActive !== false %>)">
                        <% if (link.isActive !== false) { %>
                          <i class="bi bi-eye-slash text-orange-600"></i>
                        <% } else { %>
                          <i class="bi bi-eye text-green-600"></i>
                        <% } %>
                      </button>
                      <button class="btn btn-ghost btn-sm text-red-600" onclick="deleteLink('<%= link.id %>')">
                        <i class="bi bi-trash"></i>
                      </button>
                    </div>
                  </div>
                </div>
              <% }); %>
            <% } else { %>
              <div class="text-center py-12">
                <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <i class="bi bi-link-45deg text-gray-400 text-2xl"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No links yet</h3>
                <p class="text-gray-600 mb-6">Add your first link to get started with your Velink profile.</p>
                <button class="btn btn-primary" onclick="addNewLink()">
                  <i class="bi bi-plus"></i>
                  Add Your First Link
                </button>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- Add/Edit Link Modal -->
  <div id="linkModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3 id="modalTitle">Add New Link</h3>
        <button class="modal-close" onclick="closeLinkModal()">&times;</button>
      </div>
      <form id="linkForm" class="modal-body space-y-4">
        <input type="hidden" id="linkId" name="linkId">
        
        <div class="form-group">
          <label for="linkTitle" class="form-label">Title</label>
          <input type="text" id="linkTitle" name="title" class="form-input" placeholder="My awesome link" required>
        </div>
        
        <div class="form-group">
          <label for="linkUrl" class="form-label">URL</label>
          <input type="url" id="linkUrl" name="url" class="form-input" placeholder="https://example.com" required>
        </div>
        
        <div class="form-group">
          <label for="linkDescription" class="form-label">Description (Optional)</label>
          <textarea id="linkDescription" name="description" class="form-input form-textarea" placeholder="Brief description of your link"></textarea>
        </div>
        
        <div class="form-group">
          <label class="flex items-center gap-2">
            <input type="checkbox" id="linkActive" name="isActive" class="checkbox" checked>
            <span>Link is active</span>
          </label>
        </div>
        
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" onclick="closeLinkModal()">Cancel</button>
          <button type="submit" class="btn btn-primary">
            <span id="submitText">Add Link</span>
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
  <script>
    // Make links sortable
    if (document.getElementById('links-container')) {
      new Sortable(document.getElementById('links-container'), {
        handle: '.drag-handle',
        animation: 150,
        onEnd: function(evt) {
          updateLinkOrder();
        }
      });
    }

    // Add new link
    function addNewLink() {
      document.getElementById('modalTitle').textContent = 'Add New Link';
      document.getElementById('submitText').textContent = 'Add Link';
      document.getElementById('linkForm').reset();
      document.getElementById('linkId').value = '';
      document.getElementById('linkActive').checked = true;
      document.getElementById('linkModal').style.display = 'flex';
      document.getElementById('linkTitle').focus();
    }

    // Edit link
    function editLink(linkId) {
      // Find the link data (in a real app, you'd fetch this from the server)
      const linkElement = document.querySelector(`[data-link-id="${linkId}"]`);
      // For demo purposes, we'll just open the modal
      document.getElementById('modalTitle').textContent = 'Edit Link';
      document.getElementById('submitText').textContent = 'Update Link';
      document.getElementById('linkId').value = linkId;
      document.getElementById('linkModal').style.display = 'flex';
      document.getElementById('linkTitle').focus();
    }

    // Toggle link active status
    function toggleLink(linkId, isActive) {
      fetch(`/api/links/${linkId}/toggle`, {
        method: 'PATCH',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ isActive: !isActive })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          location.reload();
        } else {
          alert('Error toggling link status');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error toggling link status');
      });
    }

    // Delete link
    function deleteLink(linkId) {
      if (confirm('Are you sure you want to delete this link?')) {
        fetch(`/api/links/${linkId}`, {
          method: 'DELETE'
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            location.reload();
          } else {
            alert('Error deleting link');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Error deleting link');
        });
      }
    }

    // Close modal
    function closeLinkModal() {
      document.getElementById('linkModal').style.display = 'none';
    }

    // Handle form submission
    document.getElementById('linkForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const formData = new FormData(this);
      const linkData = Object.fromEntries(formData);
      linkData.isActive = document.getElementById('linkActive').checked;
      
      const linkId = document.getElementById('linkId').value;
      const isEdit = linkId !== '';
      
      const url = isEdit ? `/api/links/${linkId}` : '/api/links';
      const method = isEdit ? 'PUT' : 'POST';
      
      fetch(url, {
        method: method,
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(linkData)
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          location.reload();
        } else {
          alert(data.error || 'Error saving link');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error saving link');
      });
    });

    // Update link order
    function updateLinkOrder() {
      const linkElements = document.querySelectorAll('.link-item');
      const linkOrder = Array.from(linkElements).map(el => el.dataset.linkId);
      
      fetch('/api/links/reorder', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ linkOrder })
      })
      .catch(error => {
        console.error('Error updating link order:', error);
      });
    }

    // Close modal when clicking outside
    document.getElementById('linkModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeLinkModal();
      }
    });

    // Mobile sidebar toggle
    function toggleSidebar() {
      document.querySelector('.dashboard-sidebar').classList.toggle('mobile-open');
    }
  </script>

  <style>
    /* Dashboard Styles */
    .nav-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1rem;
      color: var(--text-secondary);
      text-decoration: none;
      border-radius: var(--radius-lg);
      transition: var(--transition);
      font-weight: 500;
    }

    .nav-item:hover {
      background: var(--bg-hover);
      color: var(--text);
      text-decoration: none;
    }

    .nav-item.active {
      background: var(--primary-50);
      color: var(--primary);
    }

    .link-item {
      background: var(--bg);
      border: 1px solid var(--border);
      border-radius: var(--radius-xl);
      padding: 1.5rem;
      transition: var(--transition);
    }

    .link-item:hover {
      box-shadow: var(--shadow-md);
      transform: translateY(-1px);
    }

    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      z-index: 1000;
      align-items: center;
      justify-content: center;
      padding: 1rem;
    }

    .modal-content {
      background: var(--bg);
      border-radius: var(--radius-xl);
      max-width: 500px;
      width: 100%;
      max-height: 90vh;
      overflow-y: auto;
      box-shadow: var(--shadow-2xl);
    }

    .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1.5rem;
      border-bottom: 1px solid var(--border);
    }

    .modal-header h3 {
      margin: 0;
      font-size: 1.25rem;
      font-weight: 600;
    }

    .modal-close {
      background: none;
      border: none;
      font-size: 1.5rem;
      color: var(--text-muted);
      cursor: pointer;
      padding: 0.25rem;
      line-height: 1;
    }

    .modal-close:hover {
      color: var(--text);
    }

    .modal-body {
      padding: 1.5rem;
    }

    .modal-footer {
      display: flex;
      gap: 0.75rem;
      justify-content: flex-end;
      padding-top: 1rem;
      margin-top: 1rem;
      border-top: 1px solid var(--border-light);
    }

    @media (max-width: 768px) {
      .dashboard-sidebar {
        transform: translateX(-100%);
      }

      .dashboard-main {
        margin-left: 0;
      }

      .dashboard-header {
        padding: 1rem;
      }

      .dashboard-content {
        padding: 1rem;
      }

      .grid-cols-4 {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 480px) {
      .grid-cols-4 {
        grid-template-columns: 1fr;
      }
    }
  </style>
</body>
</html>
