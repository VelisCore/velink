  <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
  <script>
    // Initialize sortable
    const linksList = document.getElementById('linksList');
    if (linksList) {
      new Sortable(linksList, {
        animation: 150,
        ghostClass: 'opacity-50',
        handle: '.drag-handle',
        onEnd: function (evt) {
          const linkIds = Array.from(linksList.children).map(item => item.dataset.linkId);
          
          fetch('/manage/links/reorder', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ linkIds })
          });
        }
      });
    }

    // Edit link function
    function editLink(linkId) {
      // Get link data from the DOM
      const linkItem = document.querySelector(`[data-link-id="${linkId}"]`);
      const title = linkItem.querySelector('h5').textContent.trim().replace(/\s+Inactive$/, '');
      const url = linkItem.querySelector('a').href;
      const description = linkItem.querySelector('.text-muted').textContent.replace('No description', '');
      const isActive = !linkItem.classList.contains('inactive');

      // Populate edit form
      document.getElementById('editTitle').value = title;
      document.getElementById('editUrl').value = url;
      document.getElementById('editDescription').value = description;
      document.getElementById('editIsActive').checked = isActive;
      document.getElementById('editLinkForm').action = `/manage/links/${linkId}/update`;

      // Show modal
      new bootstrap.Modal(document.getElementById('editLinkModal')).show();
    }

    // Delete link function
    function deleteLink(linkId) {
      if (confirm('Are you sure you want to delete this link?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/manage/links/${linkId}/delete`;
        document.body.appendChild(form);
        form.submit();
      }
    }
  </script>
