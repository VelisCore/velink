        <li><a href="#pricing" class="nav-link">Pricing</a></li>
        <li><a href="#about" class="nav-link">About</a></li>
        <% if (typeof user !== 'undefined' && user) { %>
          <li>
            <a href="/manage" class="nav-avatar">
              <img src="<%= user.profileImage || '/img/not_signed_in/variant2.svg' %>" alt="Profile" />
            </a>
          </li>
        <% } else { %>
          <li><a href="/login" class="btn btn-ghost btn-sm">Sign In</a></li>
          <li><a href="/register" class="btn btn-primary btn-sm">Get Started</a></li>
        <% } %>
