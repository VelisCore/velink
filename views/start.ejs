        })
        .then(() => console.log('Erfolgreich geteilt'))
        .catch((error) => console.error('Fehler beim Teilen:', error));
      } else {
        alert('Teilen wird von deinem Browser nicht unterstützt.');
      }
    }
    </script>

  <script>
    window.addEventListener('resize', function() {
      updateTimelineClasses();
    });
    
    function updateTimelineClasses() {
      const timelineItems = document.querySelectorAll('.timeline-item');
      
      timelineItems.forEach(item => {
        const content = item.querySelector('.timeline-content');
        
        if (window.innerWidth <= 768) {
          content.classList.remove('right');
          content.classList.add('left');
        } else {
          content.classList.remove('left');
          content.classList.add('right');
        }
      });
    }
    
    updateTimelineClasses();
    
  </script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const elements = document.querySelectorAll(".timeline-content");
  
      function animateOnScroll() {
        const scrollTop = window.pageYOffset;
        const windowHeight = window.innerHeight;
  
        elements.forEach((el) => {
          const rect = el.getBoundingClientRect();
          const offsetTop = scrollTop + rect.top;
          if (scrollTop + windowHeight > offsetTop + 100) {
            el.classList.add("visible");
          }
        });
      }
  
      window.addEventListener("scroll", animateOnScroll);
      animateOnScroll();
    });
  </script>

